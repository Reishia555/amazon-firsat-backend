{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "python app.py",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "environments": {
    "production": {
      "variables": {
        "FLASK_ENV": "production",
        "APNS_USE_SANDBOX": "false"
      }
    },
    "staging": {
      "variables": {
        "FLASK_ENV": "staging",
        "APNS_USE_SANDBOX": "true"
      }
    }
  }
}